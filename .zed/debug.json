// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "CodeLLDB",
    "label": "cargo test -p lumesh --all-targets",
    "build": {
      "label": "cargo test -p lumesh --all-targets",
      "command": "cargo",
      "args": ["test", "--package", "lumesh", "--all-targets", "--no-run"],
      "env": {
        "RUSTC_TOOLCHAIN": "/usr"
      },
      "cwd": "/opt/code/rust/lume",
      "use_new_terminal": false,
      "allow_concurrent_runs": false,
      "reveal": "always",
      "reveal_target": "dock",
      "hide": "never",
      "tags": [],
      "shell": "system",
      "show_summary": false,
      "show_command": false
    },
    "sourceLanguages": ["rust"]
  },
  {
    "label": "Build & Debug Lume",
    "build": {
      "command": "cargo",
      "args": ["build"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/lume",
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "use_new_terminal": true,
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
